<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mingguan">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="15dp"
        android:layout_alignParentTop="true">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/baseline_arrow_back_24" />

        <!-- Header Text -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/black"
            android:text="TEPAT WAKTU"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Clock Icon -->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/iconclockblck" />

    </RelativeLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        android:text="Pilih Minggu Ke:"
        android:textColor="@color/black"
        android:fontFamily="@font/robotobold"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:id="@+id/bulan1"
        android:gravity="center">

        <!-- Box for Month 1 -->
        <TextView
            android:id="@+id/pertama"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_background"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Box for Month 2 -->
        <TextView
            android:id="@+id/kedua"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_background_white"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Box for Month 3 -->
        <TextView
            android:id="@+id/ketiga"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_background_white"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Box for Month 4 -->
        <TextView
            android:id="@+id/keempat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_background_white"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bulan1"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        android:text="Detail Absensi:"
        android:textColor="@color/black"
        android:fontFamily="@font/robotobold"
        android:textSize="16sp" />

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView3">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Attendance Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp">

                    <!-- Profile Image -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/fotoprofil"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop" />

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Name and Position -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jokowi"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Karyawan"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <!-- Attendance Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_tepat_waktu"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:text="Senin: 07:45"
                                android:textSize="12sp"
                                android:textColor="#FFFFFF"
                                android:layout_marginEnd="8dp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_tepat_waktu"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:text="Selasa: 07:45"
                                android:textSize="12sp"
                                android:textColor="#FFFFFF"
                                android:layout_marginEnd="8dp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_tepat_waktu"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:text="Rabu: 07:45"
                                android:textSize="12sp"
                                android:textColor="#FFFFFF"
                                android:gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_tepat_waktu"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:text="Kamis: 07:45"
                                android:textSize="12sp"
                                android:textColor="#FFFFFF"
                                android:layout_marginEnd="8dp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_tepat_waktu"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:text="Jumat: 07:45"
                                android:textSize="12sp"
                                android:textColor="#FFFFFF"
                                android:gravity="center" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Summary (5/5 and Checklist) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/5"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="4dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check_circle"
                            android:contentDescription="Checklist Icon" />
                    </LinearLayout>
                </LinearLayout>




                <!-- Duplicate the above Attendance Card layout for multiple entries -->
            </LinearLayout>
        </ScrollView>
    </FrameLayout>


</RelativeLayout>
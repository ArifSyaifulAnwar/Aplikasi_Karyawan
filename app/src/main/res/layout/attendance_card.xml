<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_card_background"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/fotoprofil"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_background"
        android:padding="4dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/roleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/statusTodayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9C27B0"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />






        <!-- Jika Anda ingin menambahkan tombol, Anda bisa menambahkannya di sini -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonTepatWaktu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_tepat_waktu"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:text="Tepat Waktu"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonTerlambat"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:background="@drawable/button_terlambat"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:text="Terlambat"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>